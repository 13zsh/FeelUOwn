QScrollBar:vertical {
    margin: 0px 0;
    border: 0px solid grey;
    background: #222;
    width: 6px;
    border-radius: 3px;
}

QScrollBar::handle:vertical {
    width: 6px;
    background: #993333;
    border-radius: 3px;
    margin: 0 0;
    border: 0px solid #993333;
}

QScrollBar::add-line:vertical {
    border: 0px solid grey;
    background: #222;
    height: 20px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    border: 0px solid grey;
    background: #222;
    height: 20px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollArea {
        border: 0px solid #993333;
}
